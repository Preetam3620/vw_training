<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

<bean id="birthDate" class="com.util.BirthDate">
	<constructor-arg value="25" />
	<constructor-arg value="07" />
	<constructor-arg value="1979" />
</bean>

<bean id="employee" class="constructorvaluerefinjection.Employee">
 <constructor-arg value="amit" />
 <constructor-arg value="deshpande" /> 

 <constructor-arg ref="birthDate" /> 
</bean>

</beans>